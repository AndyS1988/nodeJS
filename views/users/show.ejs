<div>
    <h2>User Data for
        <%= user.fullName %>
    </h2>
    <table class="table">
        <tr>
          <th>Name</th>
          <td>
            <%= user.fullName %>
          </td>
        </tr>
        <tr>
          <th>Email</th>
          <td>
            <%= user.email %>
          </td>
        </tr>
        <tr>
          <th>Zip Code</th>
          <td>
            <%= user.zipCode %>
          </td>
        </tr>
        <tr>
          <th>Password</th>
          <td class="hidden-text">
            <%= user.password %>
          </td>
        </tr>
      </table>
      
      <% if (user.subscribedAccount) { %>
      <h4 class="center"> This user has a
        <a href="<%=`/subscribers/${user.subscribedAccount}` %>">
          subscribed account</a>
      </h4>
      <% } %>

      <div>
        <a class="btn btn-secondary" href="/users">View all users</a>
      </div><br>
      <div>
        <a class="btn btn-secondary" href="<%=`/users/${user._id}/edit`%>">
          Edit User Details
        </a>
      </div><br>
      <div>
        <a class="btn btn-secondary" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
      </div>
      
</div>