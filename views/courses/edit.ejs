<div>
    <h1>Edit Course (for Admins only!)</h1>

    <form class="form-signin" action="<%=`/courses/${course._id}/update?_method=PUT`%>" method="POST">
    
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input type="text" name="title" id="inputTitle" value="<%= course.title %>" class="form-control" placeholder="Title" autofocus>
        </div>
        <div class="form-group">
            <label for="inputDescription">Description</label>
            <input type="text" name="description" id="inputDescription" value="<%= course.description %>" class="form-control" placeholder="amazing course description">
        </div>
        <div class="form-group">
            <label for="inputMaxStudents">Max Students</label>
            <input type="text" name="maxStudents" id="inputMaxStudents" value="<%= course.maxStudents %>" pattern="\d*" class="form-control" placeholder="Max Students" required>
        </div>
        <div class="form-group">
            <label for="inputPrice">Price in $</label>
            <input type="text" name="price" id="inputPrice" pattern="\d*" value="<%= course.price %>" class="form-control" placeholder="Cost" required>
        </div>
        <div class="form-group">
            <label for="zipCode">Zip Code</label>
            <input type="text" name="zipCode" pattern="[0-9]{5}" value="<%= course.zipCode %>" class="form-control" required />
        </div>
        <br />
        <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
      </form>
</div>